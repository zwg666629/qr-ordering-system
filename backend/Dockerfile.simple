# 使用官方的OpenJDK 11镜像作为基础镜像
FROM openjdk:11

# 设置工作目录
WORKDIR /app

# 安装Maven
RUN apt-get update && \
    apt-get install -y maven curl && \
    rm -rf /var/lib/apt/lists/*

# 复制项目文件
COPY pom.xml .
COPY src ./src

# 构建项目
RUN mvn clean package -DskipTests

# 暴露端口
EXPOSE 10000

# 启动应用 - 使用properties文件
CMD ["java", "-jar", "target/ordering-system-1.0.0.jar"]